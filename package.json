{
  "name": "cubo-ui-srcs",
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "start": "ng serve --port 4300",
    "build": "ng build application --prod --base-href 'https://cubonetwork.github.io/cubo-ui/'",
    "deploy": "npm run build && ngh --repo=https://GH_TOKEN@github.com/cubonetwork/cubo-ui.git --name='Travis CI' --email=dev@cubo.network --message='New release 🎉' --no-silent",
    "build:lib": "ng build lib --prod",
    "deploy:lib": "npm run build:lib && npm publish projects/lib/dist",
    "test": "ng test lib --watch=false",
    "lint": "npm run lint:ts && npm run lint:css",
    "lint:ts": "tslint -c tslint.json 'projects/**/*.ts'",
    "lint:css": "sass-lint -c sass-lint.json 'projects/**/*.scss' -v -q",
    "fix:ts": "tslint -c tslint.json 'projects/**/*.ts' --fix",
    "postinstall": "npm run build:lib && npm link ./projects/lib/dist",
    "analyzer": "node --max_old_space_size=8000 ./node_modules/@angular/cli/bin/ng build application --prod --stats-json && webpack-bundle-analyzer dist/stats.json"
  },
  "dependencies": {
    "@angular/animations": "^8.0.2",
    "@angular/cdk": "^8.0.1",
    "@angular/common": "^8.0.2",
    "@angular/compiler": "^8.0.2",
    "@angular/core": "^11.0.5",
    "@angular/flex-layout": "^8.0.0-beta.26",
    "@angular/forms": "^8.0.2",
    "@angular/http": "^7.2.4",
    "@angular/material": "^8.0.1",
    "@angular/platform-browser": "^8.0.2",
    "@angular/platform-browser-dynamic": "^8.0.2",
    "@angular/router": "^8.0.2",
    "@ngx-meta/core": "^7.0.0",
    "core-js": "^3.1.4",
    "hammerjs": "^2.0.8",
    "highlight.js": "^9.14.2",
    "node-sass": "^4.12.0",
    "rxjs": "^6.4.0",
    "zone.js": "^0.10.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.801.3",
    "@angular-devkit/build-ng-packagr": "~0.801.3",
    "@angular/cli": "~8.1.3",
    "@angular/compiler-cli": "^8.0.2",
    "@angular/language-service": "^8.0.2",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.6",
    "@types/node": "~12.6.8",
    "codelyzer": "~5.1.0",
    "cubo-schematics": "^2.0.0",
    "husky": "^3.0.2",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.2.0",
    "karma-chrome-launcher": "~3.0.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "ng-packagr": "^5.3.0",
    "protractor": "~5.4.2",
    "rupture-sass": "^0.3.0",
    "sass-lint": "^1.12.1",
    "ts-node": "^8.0.2",
    "tsickle": ">=0.34.3",
    "tslib": "^1.9.3",
    "tslint": "~5.18.0",
    "typescript": "^3.4.5",
    "webpack-bundle-analyzer": "^3.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  }
}
