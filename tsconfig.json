{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./projects/",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@app/*": ["application/src/app/*"],
      "@env/*": ["application/src/environments/*"],
      "@lib": ["lib/src/public_api"]
    },
    "module": "es2020",
  }
}
